<h1 class="title">Burger Time!</h1>

<div class="burger-lists">
  <div class="not-devoured-burgers">
    <h2>Burgers Not Yet Devoured</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured-burgers">
    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form" action="#">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

