<h1 class="title">Burger Time!</h1>

<div class="main-content">
  <div class="burger-lists">
    <div class="not-devoured-burgers">
      <h2>Burgers to Eat</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="devoured-burgers">
      <h2>Burgers Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="lettuce"></div>
  <div class="cheese"></div>
  <div class="ketchup"></div>
  <div class="burger"></div>


  <div class="burger-add">
    <h2>Add a Burger</h2>
    <form class="create-form" action="#">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <p>
          <label>
            <input name="devoured" type="radio" value="1" checked />
            <span> Devoured!</span>
          </label>
        </p>
        <p>
          <label>
            <input name="devoured" type="radio" value="0" />
            <span>Not Devoured</span>
          </label>
        </p>
      </div>

      <button class="waves-effect waves-light btn" type="submit">Add Burger</button>
    </form>
  </div>

</div>

